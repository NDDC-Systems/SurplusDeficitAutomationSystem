@{
    ViewData["Title"] = "Home Page";
    @*Layout = null;*@
}

<link rel="stylesheet" href="~/css/site.css" />


<html>
<head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        .direction {
            font-family: Garamond;
            bottom: 10px;
            left: 24px;
            font-size: 28px;
        }

        .wrapper {
            display: grid;
            grid-template-columns: 150px 150px 150px;
            grid-gap: 200px;
            background-color: #fff;
            color: #444;
        }

        .box {
            background-color: rgba(100, 162, 182, 0.87);
            color: #fff;
            border-radius: 10px;
            padding: 100px;
            font-size: 150%;
            float: left;
            height: 300px;
            width: 300px;
            box-shadow: 0px 13px 10px black;
            
        }

        .column {
            float: left;
            width: 25%;
        }

        /* Clear floats after the columns */
        .box:after {
            content: "";
            display: table;
            clear: both;
        }
        * {
  box-sizing: border-box;
}
    </style>
</head>
