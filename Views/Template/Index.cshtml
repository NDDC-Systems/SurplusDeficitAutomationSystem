@model SurplusDeficitAutomationSystem.ViewModels.ViewModel

@{
    ViewData["Title"] = "Report Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">View Templates</h1>

<div style="align-content: center;">
    <div>
        <hr />
        <div class="row">
            <div class="col-sm-2">
                <p>Template Id</p>
            </div>
            <div class="col-sm-2">
                <p>Template Name</p>
            </div>
        </div>
        <hr class="w-100" />
        @foreach (var template in Model.Templates)
        {
            <div class="row">
                <div class="col-sm-2">
                    @template.TemplateId
                </div>
                <div class="col-sm-2">
                    @template.TemplateName
                </div>
            </div>

        }

    </div>
</div>
<div>
    <!--<a asp-action="Edit" asp-route-id="Model.">Edit</a>-->
    <a asp-action="Index">Back to List</a>
</div>