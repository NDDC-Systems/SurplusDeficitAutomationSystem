@model IEnumerable<SurplusDeficitAutomationSystem.Models.Report>

@{
    ViewData["Title"] = "Index";
}
<title></title>
<link rel="stylesheet" type="text/css"
      href="//cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css" />
<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#datatable').DataTable();
    });
</script>
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="datatable" class="table">
    <thead>
        <tr>
            <!--<th>
                Submit Date
            </th>
            <th>
                Html.DisplayNameFor(model => model.Approved)
            </th>-->
            <th>
                @Html.DisplayNameFor(model => model.Contract)
            </th>
            <th>
                Program
            </th>
            <th>
                Approving Admin
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <!--<td>
                    Html.DisplayFor(modelItem => item.SubmitDate)
                </td>
                <td>
                    Html.DisplayFor(modelItem => item.Approved)
                </td>-->
                <td>
                    <!--<a asp-area="" asp-controller="Contracts" asp-action="Details" asp-route-id="item.Contract.ContractId">View</a>-->
                    @Html.DisplayFor(modelItem => item.Contract.Provider.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Template.TemplateName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Admin.FirstName) @Html.DisplayFor(modelItem => item.Admin.LastName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ReportId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ReportId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ReportId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
