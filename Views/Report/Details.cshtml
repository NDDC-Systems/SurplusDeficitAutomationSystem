@model SurplusDeficitAutomationSystem.ViewModels.ReportDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">View Reports</h1>

<div>
    <div>
        <hr />
        <div class="row">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.Report[0].ContractId)
            </div>
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.Report[0].SubmitDate)
            </div>
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.Report[0].Approved)
            </div>
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.Report[0].AdminId)
            </div>
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.Report[0].ApprovedDate)
            </div>
        </div>
        <hr class="w-100" />
        @for (int i = 0; i < Model.Report.Count; i++)
        {
            <div class="row">
                <div class="col-sm-2">
                    @Html.DisplayFor(model => model.Report[i].ContractId)
                </div>
                <div class="col-sm-2">
                    @Html.DisplayFor(model => model.Report[i].SubmitDate)
                </div>
                <div class="col-sm-2">
                    @Html.DisplayFor(model => model.Report[i].Approved)
                </div>
                <div class="col-sm-2">
                    @Html.DisplayFor(model => model.Report[i].AdminId)
                </div>
                <div class="col-sm-2">
                    @Html.DisplayFor(model => model.Report[i].ApprovedDate)
                </div>
            </div>
        }
    </div>
</div>
